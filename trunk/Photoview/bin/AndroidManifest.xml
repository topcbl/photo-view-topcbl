<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photoview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.co.senab.photoview.sample.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uk.co.senab.photoview.sample.SimpleSampleActivity" />
        <activity android:name="uk.co.senab.photoview.sample.ViewPagerActivity" />
        <activity android:name="uk.co.senab.photoview.sample.RotationSampleActivity" />
        <activity android:name="uk.co.senab.photoview.sample.AUILSampleActivity" />
        <activity android:name="eu.janmuller.android.simplecropimage.CropImage" />

    </application>

</manifest>